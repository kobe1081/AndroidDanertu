<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_gray_line_border"
        android:padding="1dp" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_product_img"
        android:padding="5dp"
        android:textColor="@color/darkgray"
        android:textSize="@dimen/text_size_16" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/iv_product_img"
        android:layout_toRightOf="@id/iv_product_img"
        android:background="@color/diver_color" />

    <TextView
        android:id="@+id/tv_product_market_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/view"
        android:layout_toRightOf="@id/iv_product_img"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_product_shop_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_product_market_price"
        android:layout_toRightOf="@id/iv_product_img"
        android:textColor="@color/red_text1"
        android:textSize="@dimen/text_size_14" />


</RelativeLayout>