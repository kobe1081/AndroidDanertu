<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <ImageView
        android:id="@+id/shop_product_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@null"/>

    <TextView
        android:id="@+id/txt_shopprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_product_image"
        android:gravity="center"
        android:text="adsasd"
        android:textColor="#FFA500"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txt_shopproductname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_shopprice"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="日日日日日"
        android:textColor="@color/black"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/shopitemdetial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_shopproductname"
        android:gravity="left"
        android:text="guige"
        android:textColor="#CDC5BF"
        android:textSize="12sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_marketprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_shopproductname"
        android:layout_alignRight="@+id/shop_product_image"
        android:text="shichang"/>

</RelativeLayout>