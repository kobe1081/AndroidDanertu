<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_personal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_light">

    <ImageView
        android:id="@+id/create_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/create_shop"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_p_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_bg"
                android:orientation="vertical">

                <wl.codelibrary.widget.CircleImageView
                    android:id="@+id/iv_personal_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_person1"/>

                <TextView
                    android:id="@+id/tv_personal_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_personal_head"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="账号"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_middle_text_size"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/id_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_personal_account"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_personal_account"
                    android:background="@drawable/b_corner_yellow1"
                    android:text="商家"
                    android:textColor="@color/black"
                    android:textSize="@dimen/micro_text_size"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_personal_account"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:id="@+id/ll_coupon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="优惠券"
                            android:textColor="@color/white"
                            android:textSize="@dimen/micro_text_size"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="30dp"
                        android:background="@color/white"/>

                    <LinearLayout
                        android:id="@+id/ll_jlb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_personal_jlb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="金萝卜"
                            android:textColor="@color/white"
                            android:textSize="@dimen/micro_text_size"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="30dp"
                        android:background="@color/white"/>

                    <Button
                        android:id="@+id/b_personal_checkIn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/b_corner_white2"
                        android:drawableLeft="@drawable/ic_personal_pen"
                        android:text="签到"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_p_head"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_all"
                    style="@style/person_order"
                    android:drawableTop="@drawable/order_person_all"
                    android:text="全部订单"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/line_personal"/>

                <TextView
                    android:id="@+id/order_nopay"
                    style="@style/person_order"
                    android:drawableTop="@drawable/order_person_nopay"
                    android:text="未付款"/>

                <TextView
                    android:id="@+id/order_nosend"
                    style="@style/person_order"
                    android:drawableTop="@drawable/order_person_nosend"
                    android:text="待发货"/>

                <TextView
                    android:id="@+id/order_noreceive"
                    style="@style/person_order"
                    android:drawableTop="@drawable/order_person_noreceive"
                    android:text="待收货"/>

                <TextView
                    android:id="@+id/order_complete"
                    style="@style/person_order"
                    android:drawableTop="@drawable/order_person_complete"
                    android:text="已完成"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_opera1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_order"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/order_hotel"
                    style="@style/person_item"
                    android:drawableLeft="@drawable/ic_hotel"
                    android:text="酒店订单"/>

                <TextView
                    android:id="@+id/p_collect"
                    style="@style/person_item"
                    android:layout_marginTop="1dp"
                    android:drawableLeft="@drawable/ic_collect"
                    android:text="我的收藏"/>

                <TextView
                    android:id="@+id/p_wallet"
                    style="@style/person_item"
                    android:layout_marginTop="1dp"
                    android:drawableLeft="@drawable/ic_wallet_yellow"
                    android:text="钱包"/>
                <!--<TextView-->
                    <!--android:id="@+id/test"-->
                    <!--style="@style/person_item"-->
                    <!--android:layout_marginTop="1dp"-->
                    <!--android:drawableLeft="@drawable/ic_wallet_yellow"-->
                    <!--android:text="钱包"/>-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_opera2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_opera1"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/p_myshop"
                    style="@style/person_item"
                    android:drawableLeft="@drawable/ic_shop_red"
                    android:text="我的店铺"/>

                <TextView
                    android:id="@+id/p_book"
                    style="@style/person_item"
                    android:layout_marginTop="1dp"
                    android:drawableLeft="@drawable/ic_book_blue"
                    android:text="开店必看"/>

                <TextView
                    android:id="@+id/p_crown"
                    style="@style/person_item"
                    android:layout_marginTop="1dp"
                    android:drawableLeft="@drawable/ic_crown"
                    android:text="精英联盟"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/p_car"
                    style="@style/person_item"
                    android:layout_marginTop="1dp"
                    android:drawableLeft="@drawable/ic_car_word"
                    android:text="车友会"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/personal_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/b_order_set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:background="@null"
            android:drawableLeft="@drawable/ic_personal_set"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/p_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_msg_person"
            android:textColor="@color/white"/>
    </FrameLayout>

</RelativeLayout>