<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_item"
              android:orientation="vertical"
              android:padding="5dip">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription=""
            android:scaleType="fitXY"
            android:src="@drawable/icon"/>

        <TextView
            android:id="@+id/index_type_shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ivIcon"
            android:text="单耳兔"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/index_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/index_type_shopName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ivIcon"
            android:text="主营:"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/index_type_jyfw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/index_type_title"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/index_type_title"
            android:singleLine="true"
            android:text="生活用品"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/index_type_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/index_type_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ivIcon"
            android:singleLine="true"
            android:text="中山市三乡镇"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/index_type_juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/index_type_shopName"
            android:layout_alignParentRight="true"
            android:text="5km"
            android:textColor="@color/black"
            android:textSize="13sp"/>
    </RelativeLayout>

</LinearLayout>