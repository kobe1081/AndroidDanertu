<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_ios_bg"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="使用优惠码"
        android:textColor="@color/text_gray_dark"
        android:textSize="@dimen/large_small_text"/>

    <EditText
        android:id="@+id/et_fav_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="输入优惠码"
        android:maxLines="3"
        android:padding="10dp"
        android:textColor="@color/text_gray_dark"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:text="注: 优惠码确认后仅在本订单有效"
        android:textColor="@color/red"
        android:textSize="@dimen/small_text_size"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ios_gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/b_dialog_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_ios_btn_left_selector"
            android:minHeight="50dp"
            android:text="确定"
            android:textColor="@color/blue"
            android:textSize="16sp"/>

        <View
            android:id="@+id/line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/ios_gray_line"/>

        <Button
            android:id="@+id/b_dialog_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_ios_btn_right_selector"
            android:minHeight="50dp"
            android:text="取消"
            android:textColor="@color/blue"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>