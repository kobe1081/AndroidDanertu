<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f5f5f5"
              android:orientation="vertical">

    <include layout="@layout/app_title2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/order_item_bottom_line"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="搜索"
                android:textColor="@color/gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pShop_banner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="100dp"
                    android:maxWidth="100dp"
                    android:minHeight="60dp"
                    android:minWidth="60dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon"/>

                <ImageView
                    android:id="@+id/iv_pShop_tipGo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_media_next"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_pShop_tipGo"
                    android:layout_toRightOf="@id/iv_pShop_banner"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_pShop_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="博恒"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_pShop_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="http://www.danertu.com"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/order_item_bottom_line"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b_pShop_review"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableTop="@android:drawable/ic_menu_crop"
                    android:text="预览"
                    android:textColor="@android:color/darker_gray"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="36dp"
                    android:background="@android:color/darker_gray"/>

                <Button
                    android:id="@+id/b_pShop_review"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableTop="@android:drawable/ic_menu_compass"
                    android:text="复制链接"
                    android:textColor="@android:color/darker_gray"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="36dp"
                    android:background="@android:color/darker_gray"/>

                <Button
                    android:id="@+id/b_pShop_review"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableTop="@android:drawable/ic_menu_share"
                    android:text="分享"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>