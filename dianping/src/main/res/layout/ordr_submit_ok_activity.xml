<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/home_backgroud"
                android:orientation="vertical">

    <FrameLayout
        android:id="@id/fraHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/head_bg">

        <TextView
            style="@style/style_18_BEBEBE_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="提交成功"/>
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fraHead"
        android:layout_marginBottom="55.0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="15.0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="您的订单已提交，我们会尽快安排发货！"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="15.0dp"/>

            <LinearLayout
                android:layout_width="290.0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_rounded_rectangle"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="1.0dp">

                    <TextView
                        android:id="@+id/orderid_text"
                        style="@style/style_15_666666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5.0dp"
                        android:text="订单号："/>

                    <TextView
                        android:id="@+id/orderid_value_text"
                        style="@style/style_15_666666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/orderid_text"
                        android:padding="5.0dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="1.0dp">

                    <TextView
                        android:id="@+id/paymoney_text"
                        style="@style/style_15_666666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5.0dp"
                        android:text="应付金额："/>

                    <TextView
                        android:id="@+id/paymoney_value_text"
                        style="@style/style_15_666666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/paymoney_text"
                        android:padding="5.0dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="1.0dp">

                    <TextView
                        android:id="@+id/paytype_text"
                        style="@style/style_15_666666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5.0dp"
                        android:text="支付方式："/>

                    <TextView
                        android:id="@+id/paytype_value_text"
                        style="@style/style_15_666666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/paytype_text"
                        android:padding="5.0dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="15.0dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/continue_shoping_text"
                    style="@style/style_15_EBEBEB_BOLD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_long"
                    android:gravity="center"
                    android:text="继续购物"/>

                <TextView
                    android:id="@+id/to_ordr_detail_text"
                    style="@style/style_15_EBEBEB_BOLD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.0"
                    android:background="@drawable/button_long"
                    android:gravity="center"
                    android:text="查看订单"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="15.0dp"/>

            <LinearLayout
                android:layout_width="290.0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_rounded_rectangle"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textOrderTip"
                    style="@style/style_15_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5.0dp"
                    android:text="如有疑问，您可以拨打客服电话："/>

                <TextView
                    android:id="@+id/textOrderTip"
                    style="@style/style_15_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5.0dp"
                    android:text="400 616 0066"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>