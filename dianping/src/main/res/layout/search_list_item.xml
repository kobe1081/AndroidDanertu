<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:id="@+id/list_view_start_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:background="@drawable/clickable_white_to_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingLeft="15.0dp"
            android:paddingRight="0dp"
            android:textColor="@color/deep_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15.0dp"
            android:paddingLeft="0dp"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/micro_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15.0dp"
        android:background="@color/inner_divider" />

    <View
        android:id="@+id/list_view_end_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        android:visibility="gone" />

</LinearLayout>