<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <View style="@style/PersonalLine"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="确认账号 > 安全验证 > 验证 "
                android:textColor="@color/red"
                android:textSize="@dimen/medium_text_size"/>

            <View style="@style/PersonalLine"/>

            <View
                style="@style/PersonalLine"
                android:layout_marginTop="6dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10.0dp"
                    android:paddingRight="0dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_middle_text_size"/>

                <Button
                    android:id="@+id/send_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/verification_code_button_background_selector"
                    android:paddingBottom="3.0dip"
                    android:paddingLeft="4.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingTop="3.0dip"
                    android:singleLine="true"
                    android:text="发送验证码"
                    android:textSize="@dimen/small_text_size"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/hint_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10.0dp"
                android:paddingRight="0dp"
                android:textColor="@color/red"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/input_code"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="请输入手机短信中的验证码"
                android:textSize="@dimen/small_text_size"/>


            <TextView
                android:id="@+id/hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10.0dp"
                android:paddingRight="0dp"
                android:textColor="@color/red"
                android:visibility="gone"/>

            <Button
                android:id="@+id/verity_code"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_radius_color_square"
                android:text="验证"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>