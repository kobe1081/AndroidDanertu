<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/iv_order_produce_logo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_produce_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ï¿¥ 0.00"
            android:textColor="@color/text_gray_light"/>

        <TextView
            android:id="@+id/tv_order_produce_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="x1"
            android:textColor="@color/text_gray_light"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_order_produce_logo"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/ll_right"
        android:layout_toRightOf="@+id/iv_order_produce_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_produce_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_gray_dark"/>

        <TextView
            android:id="@+id/tv_order_produce_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_attrs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@id/ll_right"
        android:layout_toRightOf="@+id/iv_order_produce_logo"
        android:gravity="left"
        android:textColor="@color/text_gray_light"/>

</RelativeLayout>