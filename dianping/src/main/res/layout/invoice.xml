<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#b5555555"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
        android:layout_marginRight="10.0dp"
        android:background="#b5555555"
        android:clickable="true"
        android:padding="10.0dp">

        <TextView
            android:id="@+id/invoice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="发票抬头："
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/edit_content"
            android:layout_toRightOf="@+id/invoice_title"
            android:height="20dp"
            android:hint="">
        </EditText>

        <TextView
            android:id="@+id/invoice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_title"
            android:clickable="true"
            android:text="发票内容："
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_title"
            android:layout_toRightOf="@+id/invoice_content"
            android:height="130dp"
            android:gravity="top"
            android:hint="">
        </EditText>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
        android:layout_marginRight="10.0dp"
        android:background="#b5555555"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10.0dip">

        <Button
            android:id="@+id/Button01"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="确定">
        </Button>

        <Button
            android:id="@+id/Button02"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="取消">
        </Button>
    </LinearLayout>


</LinearLayout>