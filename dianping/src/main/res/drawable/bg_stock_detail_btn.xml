<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/red_text1" android:state_enabled="true">
        <shape>
            <corners android:radius="3dp"/>

            <stroke
                android:width="1dp"
                android:color="@color/red_text1"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="3dp"/>

            <stroke
                android:width="1dp"
                android:color="@color/gray_text_aaa"/>
        </shape>
    </item>
</selector>